<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.GridPane?>
<?import com.example.simplecalculator.SimpleCalculatorController?>




<GridPane alignment="CENTER" hgap="10" vgap="10" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.simplecalculator.SimpleCalculatorController">
    <TextField fx:id="display" GridPane.columnIndex="0" GridPane.rowIndex="0" GridPane.columnSpan="4" />
    <Button text="1" onAction="#handleDigitButtonClick" GridPane.columnIndex="0" GridPane.rowIndex="3" />
    <Button text="2" onAction="#handleDigitButtonClick" GridPane.columnIndex="1" GridPane.rowIndex="3" />
    <Button text="3" onAction="#handleDigitButtonClick" GridPane.columnIndex="2" GridPane.rowIndex="3" />
    <Button text="4" onAction="#handleDigitButtonClick" GridPane.columnIndex="0" GridPane.rowIndex="2" />
    <Button text="5" onAction="#handleDigitButtonClick" GridPane.columnIndex="1" GridPane.rowIndex="2" />
    <Button text="6" onAction="#handleDigitButtonClick" GridPane.columnIndex="2" GridPane.rowIndex="2" />
    <Button text="7" onAction="#handleDigitButtonClick" GridPane.columnIndex="0" GridPane.rowIndex="1" />
    <Button text="8" onAction="#handleDigitButtonClick" GridPane.columnIndex="1" GridPane.rowIndex="1" />
    <Button text="9" onAction="#handleDigitButtonClick" GridPane.columnIndex="2" GridPane.rowIndex="1" />
    <Button text="0" onAction="#handleDigitButtonClick" GridPane.columnIndex="1" GridPane.rowIndex="4" />

    <Button text="+" onAction="#handleOperatorButtonClick" GridPane.columnIndex="3" GridPane.rowIndex="1" />
    <Button text="-" onAction="#handleOperatorButtonClick" GridPane.columnIndex="3" GridPane.rowIndex="2" />
    <Button text="*" onAction="#handleOperatorButtonClick" GridPane.columnIndex="3" GridPane.rowIndex="3" />
    <Button text="/" onAction="#handleOperatorButtonClick" GridPane.columnIndex="2" GridPane.rowIndex="4" />

    <Button text="C" onAction="#handleClearButtonClick" GridPane.columnIndex="0" GridPane.rowIndex="4" />
    <Button text="=" onAction="#handleEqualsButtonClick" GridPane.columnIndex="3" GridPane.rowIndex="4" />


</GridPane>
